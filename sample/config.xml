<?xml version='1.0' encoding='utf-8'?>
<widget id="com.webileapps.safeguarddemo" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SafeGuard Demo</name>
    <description>Sample application for SafeGuard plugin</description>
    <author email="dev@webileapps.com" href="https://webileapps.com">
        WebileApps Team
    </author>
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    
    <preference name="deployment-target" value="12.0" />
    <!-- SafeGuard Plugin Configuration -->
    <preference name="ROOT_CHECK_STATE" value="WARNING" />
    <preference name="DEVELOPER_OPTIONS_CHECK_STATE" value="WARNING" />
    <preference name="MALWARE_CHECK_STATE" value="WARNING" />
    <preference name="TAMPERING_CHECK_STATE" value="WARNING" />
    <preference name="NETWORK_SECURITY_CHECK_STATE" value="WARNING" />
    <preference name="SCREEN_SHARING_CHECK_STATE" value="WARNING" />
    <preference name="APP_SPOOFING_CHECK_STATE" value="WARNING" />
    <preference name="KEYLOGGER_CHECK_STATE" value="WARNING" />
    <preference name="EXPECTED_PACKAGE_NAME" value="com.webileapps.safeguarddemo" />
    
    <platform name="android">
        <preference name="GradlePluginKotlinVersion" value="1.8.0" />
        <preference name="AndroidWindowSplashScreenAnimatedIcon" value="res/screen/android/splash.png" />
        <preference name="AndroidWindowSplashScreenBackground" value="#FFFFFF" />
    </platform>
    <platform name="ios">
        <preference name="EXPECTED_SIGNATURE_HASH" value="1830081e02d3eba4e5fec2dd72f0ebceffe58539ca7e7ff6f08c6471e42cbcd4" />
    </platform>
</widget>
